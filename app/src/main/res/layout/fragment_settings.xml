<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SettingsFragment"
    android:layout_gravity="center"
    app:cardElevation="16dp"
    app:cardBackgroundColor="#00FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/dialog_box_background">

        <View
            android:layout_width="90dp"
            android:layout_height="9dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dialog_bar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:minHeight="40dp"
                android:src="@drawable/my_bell"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/notification"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="@string/notification"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>

            <Switch
                android:id="@+id/notificationSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_weight="0.15"
                android:layout_gravity="end"
                android:thumbTint="?attr/colorPrimaryVariant"
                android:trackTint="@drawable/switch_track_color"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/darkThemeIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:minHeight="40dp"
                android:src="@drawable/my_moon"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/darkTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:text="@string/darkTheme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>

            <Switch
                android:id="@+id/darkThemeSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_weight="0.15"
                android:layout_gravity="end"
                android:thumbTint="?attr/colorPrimaryVariant"
                android:trackTint="@drawable/switch_track_color"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>