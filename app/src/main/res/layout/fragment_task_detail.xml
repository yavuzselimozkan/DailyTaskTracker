<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.TaskDetailFragment"
    android:layout_gravity="center"
    app:cardElevation="16dp"
    app:cardBackgroundColor="#0080FFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/dialog_box_background">

            <View
                android:layout_width="90dp"
                android:layout_height="9dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/dialog_bar"/>

            <TextView
                android:id="@+id/taskNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Lorem Ipsum"
                />
            <TextView
                android:id="@+id/taskDescDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="italic"
                android:text="Lorem Ipsum"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:layout_marginTop="10dp"
                >

                <ImageButton
                    android:id="@+id/btnFavourite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_add_24"
                    android:contentDescription="@string/add_favourite"/>

                <ImageButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:layout_margin="5dp"

                    android:src="@drawable/baseline_add_24"
                    android:contentDescription="@string/update"/>

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_add_24"
                    android:contentDescription="@string/delete"/>

            </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>