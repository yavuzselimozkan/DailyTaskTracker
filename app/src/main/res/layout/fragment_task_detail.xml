<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginHorizontal="15dp"
    tools:context=".view.TaskDetailFragment"
    android:layout_gravity="center"
    android:background="@drawable/dialog_box_background"
    android:backgroundTint="#00FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/dialog_box_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="90dp"
            android:layout_height="9dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dialog_bar" />

        <TextView
            android:id="@+id/taskNameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum"
            android:textColor="?attr/colorOnSurface"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taskDescDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Lorem Ipsum"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:textStyle="italic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/imgFavourite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/add_favourite"
                android:focusable="true"
                android:minHeight="48dp"
                android:padding="7dp"
                android:src="@drawable/favorite_border" />

            <ImageView
                android:id="@+id/imgUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@color/md_on_surface"
                android:clickable="true"
                android:contentDescription="@string/update"
                android:focusable="true"
                android:minHeight="48dp"
                android:padding="7dp"
                android:src="@drawable/round_edit" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@color/md_on_surface"
                android:clickable="true"
                android:contentDescription="@string/delete"
                android:focusable="true"
                android:minHeight="48dp"
                android:padding="7dp"
                android:src="@drawable/baseline_delete" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>